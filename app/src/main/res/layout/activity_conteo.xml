<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Conteo">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="52dp"
        android:text="Cadenas perpetua para maltratadores de animales"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_animales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="FIRMAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:text="Detitucion de Duque"
        app:layout_constraintBottom_toTopOf="@+id/btn_duque"
        app:layout_constraintEnd_toStartOf="@+id/tv_cantDuque" />

    <Button
        android:id="@+id/btn_duque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="FIRMAR"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_cantDuque"
        app:layout_constraintEnd_toStartOf="@+id/tv_cantDuque" />

    <TextView
        android:id="@+id/tv_cantMaltrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_animales"
        app:layout_constraintStart_toEndOf="@+id/btn_animales" />

    <TextView
        android:id="@+id/tv_cantDuque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="228dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_cantMaltrato"
        app:layout_constraintStart_toStartOf="@+id/tv_cantMaltrato" />
</android.support.constraint.ConstraintLayout>